<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.example.stani.lesson8.presentation.screen.hw9.TimerViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewHour"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="@style/text_title"
                android:text="@{viewModel.timerTextHours}" />
            <TextView
                android:id="@+id/textViewDot1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="@style/text_title"
                android:text=" : " />
            <TextView
                android:id="@+id/textViewMinutes"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="@style/text_title"
                android:text="@{viewModel.timerTextMinutes}" />
            <TextView
                android:id="@+id/Dot2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="@style/text_title"
                android:text=" : " />
            <TextView
                android:id="@+id/textViewSeconds"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="@style/text_title"
                android:text="@{viewModel.timerTextSeconds}" />


        </LinearLayout>

    </RelativeLayout>
</layout>
